<h1>Edit Actor</h1>

<form action="/actors/<%= @actors.id %>" method="post">
<input type="hidden" name="_method" value="patch" />
  <div>
    <input type="text" name="first_name" value="<%= @actor.first_name %>">
  </div>
  <div>
    <input type="text" name="last_name" value="<%= @actor.last_name %>">
  </div>
  <div>
    Known For: <input type="text" name="known_for" value="<%= @actor.known_for %>">
  </div>
    <div>
    Age: <input type="number" name="age" value="<%= @actor.age %>">
  </div>
  <div>
    Gender: <input type="text" name="gender" value="<%= @actor.gender %>">
  </div>
  <div>
    Movie ID: <input type="number" name="movie_id" value="<%= @actor.movie_id %>">
  </div>
  <div>
    <input type="submit" value="Create Product">
  </div>

</form>